---
export interface Props {
    title: string;
}

const { title } = Astro.props;
import Nav from "../components/Nav.astro";
import Cursor from "../components/Cursor";
---

<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta
            name="description"
            content="Dhruv Bakshi Portfolio Site. Dhruv Bakshi is a fullstack developer with 3+ years of experience in developing stunning websites for his clients. Let him help you make a great online presence."
        />
        <meta name="viewport" content="width=device-width" />
        <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
        <meta name="generator" content={Astro.generator} />
        <title>{title}</title>
    </head>
    <body class="bg-white !cursor-none">
        <Cursor client:only />
        <!-- <div class="grid-lines w-full 2xl:max-w-7xl hidden">
            <div class="grid-line"></div>
            <div class="grid-line"></div>
            <div class="grid-line"></div>
            <div class="grid-line"></div>
            <div class="grid-line"></div>
            <div class="grid-line"></div>
            <div class="grid-line"></div>
            <div class="grid-line"></div>
            <div class="grid-line"></div>
            <div class="grid-line"></div>
            <div class="grid-line"></div>
            <div class="grid-line"></div>
        </div> -->
        <Nav />
        <slot />
    </body>
</html>

<script>
    import { setCursorHovering } from "../components/Cursor/cursorContext";

    const elements = document.querySelectorAll("[data-cursor-hover]");
    const buttons = document.querySelectorAll("button");
    [...elements, ...buttons].forEach((element) => {
        element.addEventListener("mouseenter", () => {
            setCursorHovering(true);
        });
        element.addEventListener("mouseleave", () => {
            setCursorHovering(false);
        });
    });
</script>
<style is:global>
    @import url("https://fonts.googleapis.com/css2?family=Dancing+Script:wght@400;500;600;700&family=Roboto+Slab:wght@100;200;300;400;500;600;700;800;900&display=swap");
    @font-face {
        font-family: "Integral";
        src: url("/fonts/IntegralCF-Regular.woff") format("woff");
        font-weight: 400;
        font-style: normal;
        font-display: swap;
    }
    @font-face {
        font-family: "Integral";
        src: url("/fonts/IntegralCF-Medium.woff") format("woff");
        font-weight: 500;
        font-style: normal;
        font-display: swap;
    }
    @font-face {
        font-family: "Integral";
        src: url("/fonts/IntegralCF-DemiBoldOblique.woff") format("woff");
        font-weight: 600;
        font-style: normal;
        font-display: swap;
    }
    @font-face {
        font-family: "Integral";
        src: url("/fonts/IntegralCF-BoldOblique.woff") format("woff");
        font-weight: 700;
        font-style: normal;
        font-display: swap;
    }
    @font-face {
        font-family: "Integral";
        src: url("/fonts/IntegralCF-ExtraBold.woff") format("woff");
        font-weight: 800;
        font-style: normal;
        font-display: swap;
    }
    @font-face {
        font-family: "Integral";
        src: url("/fonts/IntegralCF-Heavy.woff") format("woff");
        font-weight: 900;
        font-style: normal;
        font-display: swap;
    }
    html {
        font-family: "Integral", sans-serif;
        overflow-x: hidden;
    }

    body {
        margin: 0;
        padding: 0;
        font-family: "Integral", sans-serif;
        overflow-x: hidden;
    }

    .grid-lines {
        position: fixed;
        top: 0;
        left: 50%;
        transform: translateX(-50%);
        width: 100%;
        height: 100%;
        pointer-events: none;
        z-index: -1;
        display: grid;
        grid-template-columns: repeat(12, 1fr);
        gap: 1rem;
    }

    .grid-line {
        width: 100%;
        height: 100%;
        background-color: hsl(0deg 0% 0% / 0.1);
    }

    a {
        cursor: none;
    }

    button {
        cursor: none !important;
    }
</style>
